#include "main.h"

/**
 * buffer_to_stdout - Writes input to stdout using a buffer of 1024 chars
 */
void buffer_to_stdout(void)
{
    char buf[1024];
    ssize_t bytesRead;

    while ((bytesRead = read(STDIN_FILENO, buf, sizeof(buf))) > 0)
    {
        write(STDOUT_FILENO, buf, bytesRead);
    }

    // Ensure the last character is a newline
    if (buf[bytesRead - 1] != '\n')
    {
        write(STDOUT_FILENO, "\n", 1);
    }
}

